<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1.1.0" author="mikita" context="derby">
        <createProcedure>
            CREATE FUNCTION md5(str VARCHAR(100)) RETURNS
            VARCHAR(100)
            PARAMETER STYLE JAVA
            NO SQL LANGUAGE JAVA
            EXTERNAL NAME 'file.security.MD5.md5';
        </createProcedure>
    </changeSet>

    <changeSet id="1.2.0" author="mikita">

        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="user_pk"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="lang" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_num" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="users" indexName="user_name_uk" unique="true">
            <column name="name" />
        </createIndex>

        <createTable tableName="roles">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="role_pk"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <insert tableName="roles">
            <column name="id" valueNumeric="0"/>
            <column name="name">ROLE_SYSTEM</column>
        </insert>
        <insert tableName="roles">
            <column name="name">ROLE_ADMIN</column>
        </insert>
        <insert tableName="roles">
            <column name="name">ROLE_TOURIST</column>
        </insert>
        <insert tableName="roles">
            <column name="name">ROLE_SUPPORT</column>
        </insert>
        
        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey tableName="user_role" columnNames="user_id, role_id"/>

        <addForeignKeyConstraint constraintName="user_role_user_fk"
         referencedTableName="users" referencedColumnNames="id"
         baseColumnNames="user_id" baseTableName="user_role"/>

        <addForeignKeyConstraint constraintName="user_role_role_fk"
         referencedTableName="roles" referencedColumnNames="id"
         baseColumnNames="role_id" baseTableName="user_role"/>
        
        <createTable tableName="message">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="body" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="from_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="to_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>